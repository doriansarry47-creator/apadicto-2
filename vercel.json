{
  "version": 2,
  "buildCommand": "npm run vercel-build",
  "outputDirectory": "dist/public",
  "functions": {
    "api/index.cjs": {
      "runtime": "nodejs20.x"
    }
  },
  "rewrites": [
    { 
      "source": "/api/(.*)", 
      "destination": "/api/index" 
    },
    { 
      "source": "/((?!api|_next|favicon.ico|.*\\.).*)", 
      "destination": "/index.html" 
    }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-cache, no-store, must-revalidate"
        }
      ]
    }
  ]
}
